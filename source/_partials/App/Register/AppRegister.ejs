<div class="container">
  <header class="section-title">
    <p class="section-title-deco">Đăng ký làm</p>
    <h2 class="section-title-main">AFFILIATE</h2>
  </header>
  <div class="area-register">
    <div class="row">
      <div class="col-md-6">
        <div id="alert-box" class="alert" role="alert"></div>
        <form class="form-outline mb-5 mb-lg-0" name="form-register">
          <div class="form-group">
            <input type="text" class="form-control" name="name">
            <label>Họ và tên</label>
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email">
            <label>Email</label>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="mobile" minlength="10" maxlength="12" pattern="\d*">
            <label>Số điện thoại</label>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="channel">
            <label>Kênh marketing đang chạy</label>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="budget">
            <label>Ngân sách đã chạy</label>
          </div>
          <button class="btn btn-outline-secondary btn-submit">Đăng ký ngay</button>
        </form>
      </div>

      <div class="col-md-6">
        <!-- 16:9 aspect ratio -->
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/EDkI5y4Cm0I"></iframe>
        </div>
      </div>
    </div>
  </div>
</div>